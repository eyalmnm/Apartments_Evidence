<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_window_width"
    android:layout_height="@dimen/dialog_window_height"
    android:background="@drawable/dialog_background_shape"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="2"
    android:padding="@dimen/dialog_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_atentie2"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/nested_building_failure_main_image_margin_top"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="@string/nested_building_delete_entrance_not_empty_message"
        android:textColor="@color/grey_regular"
        android:textStyle="bold"
        android:textSize="@dimen/nested_building_failure_message_text_size" />

</LinearLayout>